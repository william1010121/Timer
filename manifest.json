{
  "manifest_version": 3,
  "name": "計時器擴展",
  "version": "1.0",
  "description": "一個簡單的計時器。",
    "permissions": ["notifications", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}

